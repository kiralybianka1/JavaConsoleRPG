<?xml version="1.0" encoding="UTF-8"?>
<project name="javaconsolerpg" default="all">
  
  
  <property file="build.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  <patternset id="ignored.files">
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/*.rbc/**"/>
    <exclude name="**/*.yarb/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/CVS/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/vssver.scc/**"/>
    <exclude name="**/vssver2.scc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.egg"/>
    <include name="*.jar"/>
    <include name="*.ear"/>
    <include name="*.klib"/>
    <include name="*.swc"/>
    <include name="*.war"/>
    <include name="*.zip"/>
    <include name="*.ane"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
    <exclude name="**/?*.aj"/>
  </patternset>
  
  <!-- Modules -->
  
  
  <!-- Module JavaConsoleRPG -->
  
  <dirname property="module.javaconsolerpg.basedir" file="${ant.file}"/>
  
  
  
  <property name="compiler.args.javaconsolerpg" value="-encoding UTF-8 -source 8 -target 8 ${compiler.args}"/>
  
  <property name="javaconsolerpg.output.dir" value="${module.javaconsolerpg.basedir}/out/production/JavaConsoleRPG"/>
  <property name="javaconsolerpg.testoutput.dir" value="${module.javaconsolerpg.basedir}/out/test/JavaConsoleRPG"/>
  
  <path id="javaconsolerpg.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="javaconsolerpg.module.production.classpath"/>
  
  <path id="javaconsolerpg.runtime.production.module.classpath">
    <pathelement location="${javaconsolerpg.output.dir}"/>
  </path>
  
  <path id="javaconsolerpg.module.classpath">
    <pathelement location="${javaconsolerpg.output.dir}"/>
  </path>
  
  <path id="javaconsolerpg.runtime.module.classpath">
    <pathelement location="${javaconsolerpg.testoutput.dir}"/>
    <pathelement location="${javaconsolerpg.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.javaconsolerpg">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.javaconsolerpg">
    <patternset refid="excluded.from.module.javaconsolerpg"/>
  </patternset>
  
  <path id="javaconsolerpg.module.sourcepath">
    <dirset dir="${module.javaconsolerpg.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.javaconsolerpg" depends="compile.module.javaconsolerpg.production,compile.module.javaconsolerpg.tests" description="Compile module JavaConsoleRPG"/>
  
  <target name="compile.module.javaconsolerpg.production" description="Compile module JavaConsoleRPG; production classes">
    <mkdir dir="${javaconsolerpg.output.dir}"/>
    <javac destdir="${javaconsolerpg.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true">
      <compilerarg line="${compiler.args.javaconsolerpg}"/>
      <bootclasspath refid="javaconsolerpg.module.bootclasspath"/>
      <classpath refid="javaconsolerpg.module.production.classpath"/>
      <src refid="javaconsolerpg.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.javaconsolerpg"/>
    </javac>
    
    <copy todir="${javaconsolerpg.output.dir}">
      <fileset dir="${module.javaconsolerpg.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.javaconsolerpg.tests" depends="compile.module.javaconsolerpg.production" description="compile module JavaConsoleRPG; test classes" unless="skip.tests"/>
  
  <target name="clean.module.javaconsolerpg" description="cleanup module">
    <delete dir="${javaconsolerpg.output.dir}"/>
    <delete dir="${javaconsolerpg.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.javaconsolerpg" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.javaconsolerpg" description="build all modules"/>
  
  <target name="all" depends="build.modules" description="build all"/>
</project>